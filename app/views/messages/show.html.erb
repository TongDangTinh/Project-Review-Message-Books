<div class="row">
  <div class="col-md-8 offset-md-2">
    <div class="message-show">
      <h2><%= @message.title %></h2>
      <p class="message-posted-by">
        Posted by <%= @message.user.name %> 
        <%= time_ago_in_words(@message.created_at) %> ago.
      </p>
      <p class="message-desc"><%= @message.description %></p>

      <h3>Comments: </h3>
      <%= render @message.comments %>

      <h3 class="reply-to-msg">Reply to Message</h3>
      <%= render "comments/form" %>
      <div class="links mt-3">
        <%= link_to "Back", messages_path, class: "btn btn-custom" %>
        <% if user_signed_in? %>
          <% if @message.user_id == current_user.id %>
            <%= link_to "Edit", edit_message_path(@message), 
              class: "btn btn-custom" %>
            <%= link_to "Delete", messages_path(@message), method: :delete,
              data: { confirm: "Are you sure?" }, class: "btn btn-custom" %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
