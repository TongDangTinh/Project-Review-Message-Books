<div class="row">
  <% @messages.each do |message| %>
    <div class="col-md-4">
      <div class="message">
        <h1 class="message-title"><%= message.title %></h1>
        <%= link_to "View Message", message_path(message), 
          class: "btn btn-outline-info" %>
      </div>
    </div>
  <% end %>
</div>
