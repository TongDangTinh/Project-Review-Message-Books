<%= form_for([@book, @book.reviews.build]) do |f| %>
  <div class="field">
    <%= f.label :rating %>
    <%= f.number_field :rating, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :comment %>
    <%= f.text_field :comment, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.submit "create comment" %>
  </div>
<% end %>
