<div class="col-md-6 offset-md-3">
  <div class="new-review-form">
    <% provide :button_text, "Update Review" %>
    <h1 class="text-center">Edit review</h1>

    <%= form_for([@book, @review]) do |f| %>
      <div class="field" id="rating-form">
        <%= f.label :rating %>
      </div>

      <div class="field">
        <%= f.label :comment %>
        <%= f.text_field :comment, class: "form-control" %>
      </div>

      <div class="field mt-2">
        <%= f.submit yield(:button_text), class: "btn-custom2" %>
      </div>
    <% end %>

  </div>
</div>

<script>
  $('#rating-form').raty({
    path: '/assets/',
    scoreName: 'review[rating]'
  });
</script>
