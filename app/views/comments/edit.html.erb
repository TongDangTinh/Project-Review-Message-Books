<h1>Edit comment</h1>
<%= form_for([@message, @comment]) do |f| %>
  <div class="field">
    <%= f.label :content, "Comment" %>
    <%= f.text_area :content, class: "form-control" %>
  </div>

  <div class="field mt-3">
    <%= f.submit "Update comment", class: "btn btn-outline-secondary" %>
  </div>
<% end %>
