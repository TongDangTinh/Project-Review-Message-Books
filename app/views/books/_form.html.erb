<%= form_for(@book) do |f| %>
  <%= f.label :title %> 
  <%= f.text_field :title, class: "form-control" %>

  <%= f.label :descripton %>
  <%= f.text_area :description, class: "form-control" %>

  <%= f.label :author %>
  <%= f.text_field :author, class: "form-control" %>

  <%= f.submit yield(:button_text) %>
<% end %>
